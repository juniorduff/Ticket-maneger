generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ALUNO
  PROFESSOR
  ADMIN
}

enum MuscleGroup {
  DORSAL
  PEITORAL
  PERNA
  BRACO
}




model User {
  id    String    @default(uuid()) @id
  email String  @unique
  name  String?
  cpf   String
  age   Int
  weight  Decimal
  password String
  restriction String
  goal  String
  date_of_birth DateTime
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt
  permission Role
}

model Exercise{

id String @default(uuid()) @id
name String
muscle_group MuscleGroupyan
image_url String?
video_url String?
description String
created_at DateTime @default(now())
updated_at DateTime? @updatedAt
}